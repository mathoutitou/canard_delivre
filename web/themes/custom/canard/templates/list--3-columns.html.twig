<section class="list--3-columns clearfix">
  {% if label is not empty %}
    <h2 class="title">{{ label }}</h2>
  {% endif %}

  <div class="container">
    <div class="row">
      {% for item in items %}
        <div class="col-lg-4 col-md-4">
          {{ item }}
        </div>
      {% endfor %}
    </div>
</div>
</section>
